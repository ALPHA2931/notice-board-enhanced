{
  "version": 2,
  "builds": [
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "src/backend/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/backend/prisma/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/backend/$1"
    },
    {
      "src": "/health",
      "dest": "/src/backend/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/frontend/$1"
    }
  ],
  "functions": {
    "src/backend/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
